.item
  = render partial: "users/icon", locals: {user: item.author}
  .content
    .header
      = link_to item.author.username, item.author
      = "が約#{time_ago_in_words item.published_at.try(:to_datetime)}前に投稿しました"
    .title
      %h1= link_to item.title, [item.author, item]
      .tags= render item.tags
  .status
    = link_to item_stock_path(item), method: (current_user.stocks?(item) ? :delete : :post) do
      .glyphicon.glyphicon-folder-open{class: ("active" if current_user.stocks? item)}
    = item.stockers_count

