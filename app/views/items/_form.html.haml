.col-sm-12
  = simple_form_for @item, :html => { :class => 'form-horizontal' } do |f|
    = f.input :title
    = f.input :tag_list, label: "Tags"
    = f.input :body, input_html: {cols: 100, rows: 10}
    = f.select :scope, {"Private" => :private, "Public" => :public}
    = f.button :submit, "Save", class: "btn-primary"

